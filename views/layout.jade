doctype html
html(lang='en')
  head
    title NodeAuth
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-md.navbar-light(style="background-color: #e3f2fd;")
      a.navbar-brand(href='#') NodeAuth
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          if user
            li(class=(title == 'Members' ? 'active': ''))
              a.nav-link(href='/') Members
          if !user
            li(class=(title == 'Register' ? 'active': ''))
              a.nav-link(href='/users/register') Register
            li(class=(title == 'Login' ? 'active': ''))
              a.nav-link(href='/users/login') Login
        ul.navbar-nav.navbar-right
          if user
            li
              a.nav-link(href='/users/logout') Logout
    .container
      !=messages()
      block content
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='/js/bootstrap.js')
